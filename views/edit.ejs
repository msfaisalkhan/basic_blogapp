<% include ./partials/header %>


<div id="new" class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> //?_method override is used here
    <div class="feild">
        <label >Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="feild">
            <label >Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="feild">
                <label >Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
    </div>
   
        <input class="ui violet inverted button" type="submit">
    
    </form>
</div>
<% include ./partials/footer %>
